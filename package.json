{
  "version": "0.0.3",
  "name": "drupalgap",
  "description": "An application development kit for Drupal built with Angular JS.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/signalpoint/DrupalGap"
  },
  "keywords": [
    "angular",
    "drupal",
    "phonegap",
    "bootstrap",
    "ionic"
  ],
  "license": "GNU",
  "author": "Tyler Frankenstein <tyler.frankenstein@gmail.com> (http://tylerfrankenstein.com/)",
  "bugs": {
    "url": "https://github.com/signalpoint/DrupalGap/issues"
  },
  "homepage": "http://drupalgap.org",
  "devDependencies": {
    "angular-drupal": "^0.0.2",
    "bower": "^1.3.1",
    "grunt": "^0.4.5",
    "grunt-contrib-concat": "^0.5.1",
    "grunt-contrib-uglify": "^0.9.1",
    "grunt-contrib-watch": "^0.6.1",
    "http-server": "^0.6.1",
    "karma": "^0.12.36",
    "karma-chrome-launcher": "^0.1.12",
    "karma-jasmine": "^0.3.5",
    "protractor": "~1.0.0",
    "shelljs": "^0.2.6",
    "tmp": "0.0.23"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "start": "http-server -a 0.0.0.0 -p 8000",
    "pretest": "npm install",
    "test": "node node_modules/karma/bin/karma start test/karma.conf.js",
    "test-single-run": "node node_modules/karma/bin/karma start test/karma.conf.js  --single-run",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/protractor-conf.js",
    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + cat('bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\""
  }
}
